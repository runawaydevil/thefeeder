# Application Configuration
APP_NAME="Pablo Feeds"
APP_PORT=7389
APP_BASE_URL="https://feeder.example.com"

# User-Agent
USER_AGENT_BASE="Feeder/2025 (+https://feeder.example.com; contato: admin@example.com)"

# Network Configuration
GLOBAL_CONCURRENCY=5
PER_HOST_RPS=0.5
FETCH_TIMEOUT_SECONDS=20

# Retry Configuration
RETRY_MAX_ATTEMPTS=4
RETRY_BASE_MS=800
RETRY_MAX_MS=10000

# Intervals
DEFAULT_FETCH_INTERVAL_SECONDS=600
DEFAULT_TTL_SECONDS=900

# Feeds Configuration
# Feeds are loaded from feeds.yaml file in the project root
# Create feeds.yaml with your feed list (see feeds.yaml.example for format)

# Limits
MAX_FEEDS=150
MAX_ITEMS=1500

# Database
DB_PATH=feeder.sqlite

# Timezone Configuration
TIMEZONE=UTC

# Security
ALLOWED_HOSTS=*

# Admin Authentication
ADMIN_USER=admin
ADMIN_PASSWORD=changeme
